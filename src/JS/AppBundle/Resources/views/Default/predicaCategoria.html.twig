{% extends 'base.html.twig' %}
{% block body %}
    <div class="below-slideshow">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="txt-block">


                        <h1 class="head-line">{{ categoria.nombre }}</h1>

                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- BELOW SLIDESHOW SECTION END-->
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="tag-home">
                    {{ categoria.descripcionBreve | raw }}
                </h1>
                <hr />
            </div>
        </div>
    </div>
    <!-- TAG HOME SECTION END-->
    <div class="just-sec">


        <div class="container">
            <div class="row">
                {% for predica in categoria.predicas %}

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <a href="{{ path('predica_detalle', {'categoria' : categoria.slug , 'detalle' : predica.slug}) }}">
                            <div class="just-txt-div">

                                {#<img src="{{ categoria.getImagePath() }}" alt="" class="img-circle set-about-img"  />#}
                                <h2><strong>{{ predica.nombre }} </strong></h2>
                                <h3><strong>Autor: </strong>{{ predica.autor.nombre }}</h3>
                                <h3> {{ predica.fecha | date('d-m-Y') }} </h3>
                                <p >
                                    {{ predica.descripcionBreve|raw }}
                                </p>

                            </div>
                        </a>
                    </div>
                {% endfor %}


            </div>

        </div>
    </div>
    <!--JUST SECTION END-->
    <!--CLIENT SECTION END-->
    <!--SET-DIV SECTION END-->
{% endblock %}